module SearchMinFitc

  use import int.Int
  use import ref.Ref
  use import array.Array

  let search_min (a: array int) (n: int)
    requires { 0 <= n = length a }
    requires { forall i:int. 0 <= i < n -> a[i] >= 0 }
    returns  { min -> forall i:int. 0 <= i < n -> a[i] <= min }
  = let min = ref 0 in
    min := a[0];
    for i = 1 to n - 1 do
      invariant { !min <= a[i] }
      if !min >= a[i] then min := a[i];
    done;
    !min
end
