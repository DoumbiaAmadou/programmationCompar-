module Fontaine
  use import int.Int
  use import ref.Ref
  use import array.Array

  let min_num (a: array int) (n : int)
    requires { 0 <= n = length a }
    returns { min -> forall i:int. 0 <= i < n -> a[i] >= min }
  = let min = ref 0 in
      for i = 0 to n - 1 do
        if !min > a[i] then min := a[i]
      done;
      !min
end
